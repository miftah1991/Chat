<Window x:Class="Chat.Desktop.Views.InfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="From Server" Height="170" Width="450" WindowStyle="ToolWindow" ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="MyStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#FF5D8A9E"></Setter>
            <Setter Property="Foreground"
                    Value="White"></Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Margin="10 10 10 35" VerticalAlignment="Center">
            <TextBlock
            x:Name="txtInfo"
            Foreground="#555"
            TextWrapping="Wrap"
            FontSize="16"
            FontFamily="Segoe UI"
            TextAlignment="Center"
            VerticalAlignment="Center">Info</TextBlock>
        </StackPanel>
        <Button x:Name="btnClose" Cursor="Hand" Style="{StaticResource MyStyle}" Click="btnClose_Click" Width="80" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 0 5 5">Close</Button>
    </Grid>
</Window>
